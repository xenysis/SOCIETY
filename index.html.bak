        }

        body.dark-mode .highlight-item {
            background: rgba(61, 3, 95, 0.767);
        }

        body.dark-mode .highlight-item span {
            color: #e2e8f0;
        }
        
        body.dark-mode .countdown-wrapper {
            background: linear-gradient(145deg, #1f5dc7, #051025);
        }
        
        body.dark-mode .countdown-item {
            background: rgba(14, 34, 126, 0.918);
            border-color: rgba(56, 44, 44, 0.1);
        }

        /* Mobile Responsive Styles */
        @media (max-width: 768px) {
            .countdown-wrapper {
                background: linear-gradient(145deg, #2e59d9, #1f5dc7);
                padding: 1.5rem 0.8rem;
                margin: 0;
                border-radius: 0;
                position: relative;
                overflow: hidden;
                display: block !important;
            }

            .countdown-wrapper::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(45deg, rgba(255,255,255,0.1) 25%, transparent 25%),
                            linear-gradient(-45deg, rgba(255,255,255,0.1) 25%, transparent 25%),
                            linear-gradient(45deg, transparent 75%, rgba(255,255,255,0.1) 75%),
                            linear-gradient(-45deg, transparent 75%, rgba(255,255,255,0.1) 75%);
                background-size: 15px 15px;
                opacity: 0.15;
            }

            .countdown-wrapper h3 {
                font-size: 1.4rem;
                margin-bottom: 1.2rem;
                padding: 0 0.5rem;
                text-align: center;
                color: #fff;
                text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
            }

            .countdown-container {
                display: grid;
                grid-template-columns: repeat(2, 1fr);
                gap: 0.8rem;
                padding: 0 0.5rem;
            }

            .countdown-item {
                background: rgba(255, 255, 255, 0.15);
                border: 1px solid rgba(255, 255, 255, 0.3);
                border-radius: 12px;
                padding: 1rem 0.5rem;
                min-width: unset;
                flex: none;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                backdrop-filter: blur(5px);
            }

            .countdown-value {
                font-size: 2.2rem;
                margin-bottom: 0.3rem;
                color: #fff;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
                font-weight: 700;
            }

            .countdown-label {
                font-size: 0.85rem;
                font-weight: 600;
                color: rgba(255, 255, 255, 0.9);
                text-transform: uppercase;
                letter-spacing: 1px;
            }

            .puja-date-flash {
                margin-top: 1.2rem;
                padding: 0.8rem;
                background: rgba(255, 255, 255, 0.15);
                border: 1px solid rgba(255, 255, 255, 0.3);
                border-radius: 10px;
            }

            .date-display .day {
                font-size: 1.1rem;
                font-weight: 600;
            }

            .date-display .date {
                font-size: 0.9rem;
                opacity: 0.9;
            }

            .ganesh-puja-content {
                padding: 1rem;
            }
        }
        
        @media (max-width: 576px) {
            .countdown-wrapper {
                padding: 1.2rem 0.6rem;
            }

            .countdown-wrapper h3 {
                font-size: 1.2rem;
                margin-bottom: 1rem;
            }

            .countdown-container {
                gap: 0.6rem;
            }

            .countdown-item {
                padding: 0.8rem 0.4rem;
            }

            .countdown-value {
                font-size: 2rem;
            }

            .countdown-label {
                font-size: 0.8rem;
            }

            .puja-date-flash {
                padding: 0.7rem;
            }

            .date-display .day {
                font-size: 1rem;
            }

            .date-display .date {
                font-size: 0.85rem;
            }
        }

