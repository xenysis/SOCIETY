    <script>
    // Initialize LazyLoad
    const myLazyLoad = new LazyLoad({
        elements_selector: ".lazy"
    });

    // Toggle mobile menu
    document.querySelector('.navbar-toggler').addEventListener('click', function() {
        document.querySelector('.navbar-collapse').classList.toggle('show');
    });

    // Countdown Timer for Ganesh Puja
    function updateGaneshPujaCountdown() {
        // Set the date to August 27, 2025 at 8:00 AM
        const ganeshPujaDate = new Date("August 27, 2025 08:00:00").getTime();
        const now = new Date().getTime();
        const timeLeft = ganeshPujaDate - now;

        const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
        const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

        document.getElementById("gp-days").innerHTML = days.toString().padStart(2, '0');
        document.getElementById("gp-hours").innerHTML = hours.toString().padStart(2, '0');
        document.getElementById("gp-minutes").innerHTML = minutes.toString().padStart(2, '0');
        document.getElementById("gp-seconds").innerHTML = seconds.toString().padStart(2, '0');

        if (timeLeft < 0) {
            clearInterval(countdownTimer);
            document.querySelector(".countdown-container").innerHTML = "<h3 class='text-center'>Ganesh Puja Has Started!</h3>";
        }
    }

    // Initial call and then update every second
    updateGaneshPujaCountdown();
    const countdownTimer = setInterval(updateGaneshPujaCountdown, 1000);

    // Dark Mode Toggle
    const darkModeToggle = document.getElementById('theme-toggle');
    const body = document.body;
    
    // Check for saved user preference
    const darkMode = localStorage.getItem('darkMode');
    
    // If dark mode was previously enabled, reapply it
    if (darkMode === 'enabled') {
        body.classList.add('dark-mode');
    }
    
    darkModeToggle.addEventListener('click', () => {
        body.classList.toggle('dark-mode');
        if (body.classList.contains('dark-mode')) {
            localStorage.setItem('darkMode', 'enabled');
        } else {
            localStorage.setItem('darkMode', 'disabled');
        }
    });
    </script>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const expandAllBtn = document.querySelector('.expand-all-btn');
        let allExpanded = false;
        
        expandAllBtn.addEventListener('click', function() {
            const allDetails = document.querySelectorAll('.activity-details');
            
            if (allExpanded) {
                // Collapse all
                allDetails.forEach(detail => detail.classList.remove('active'));
                this.innerHTML = '<i class="fas fa-list"></i> Show All Activities';
            } else {
                // Expand all
                allDetails.forEach(detail => detail.classList.add('active'));
                this.innerHTML = '<i class="fas fa-minus"></i> Hide All Activities';
            }
            
            allExpanded = !allExpanded;
        });
    });
    </script>

