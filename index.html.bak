    <script>
        // Update mobile countdown in the Ganesh Puja section
        function updateMobileGaneshPujaCountdown() {
            // Set the date to August 27, 2025 at 8:00 AM
            const ganeshPujaDate = new Date("August 27, 2025 08:00:00").getTime();
            const now = new Date().getTime();
            const timeLeft = ganeshPujaDate - now;

            const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
            const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

            if (document.getElementById("mobile-gp-days")) {
                document.getElementById("mobile-gp-days").innerHTML = days.toString().padStart(2, '0');
                document.getElementById("mobile-gp-hours").innerHTML = hours.toString().padStart(2, '0');
                document.getElementById("mobile-gp-minutes").innerHTML = minutes.toString().padStart(2, '0');
                document.getElementById("mobile-gp-seconds").innerHTML = seconds.toString().padStart(2, '0');

                if (timeLeft < 0) {
                    clearInterval(mobileCountdownTimer);
                    document.querySelector(".mobile-countdown-container").innerHTML = "<h3 class='text-center'>Ganesh Puja Has Started!</h3>";
                }
            }
        }

        // Initial call and then update every second for mobile countdown
        updateMobileGaneshPujaCountdown();
        const mobileCountdownTimer = setInterval(updateMobileGaneshPujaCountdown, 1000);
    </script>

