    <style>
        /* Ganesh Puja Section Styles */
        .ganesh-puja-section {
            background: linear-gradient(135deg, #579ce2 0%, #4f30a3b0 100%);
            padding: 5rem 0;
            position: relative;
            overflow: hidden;
        }
        
        .ganesh-puja-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('images/pattern.png') repeat;
            opacity: 0.1;
            z-index: 1;
        }
        
        .ganesh-puja-image {
            position: relative;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(95, 3, 3, 0.911);
        }
        
        .ganesh-puja-image img {
            width: 100%;
            height: auto;
            transition: transform 0.5s ease;
        }
        
        .ganesh-puja-image:hover img {
            transform: scale(1.05);
        }
        
        .image-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
            padding: 2rem;
            color: white;
            transform: translateY(100%);
            transition: transform 0.3s ease;
        }
        
        .ganesh-puja-image:hover .image-overlay {
            transform: translateY(0);
        }
        
        .overlay-content h3 {
            margin-bottom: 1rem;
            font-size: 1.5rem;
        }
        
        .overlay-content ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .overlay-content li {
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .ganesh-puja-content {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            position: relative;
            z-index: 2;
        }
        
        .countdown-wrapper {
            background: linear-gradient(145deg, #df4edf, #2e59d9);
            border-radius: 15px;
            padding: 2rem;
            color: white;
            margin-bottom: 2rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            position: relative;
            overflow: hidden;
        }

        .countdown-wrapper::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(255,255,255,0.1) 25%, transparent 25%),
                        linear-gradient(-45deg, rgba(255,255,255,0.1) 25%, transparent 25%),
                        linear-gradient(45deg, transparent 75%, rgba(255,255,255,0.1) 75%),
                        linear-gradient(-45deg, transparent 75%, rgba(255,255,255,0.1) 75%);
            background-size: 20px 20px;
            opacity: 0.1;
        }

        .countdown-wrapper h3 {
            text-align: center;
            font-size: 1.8rem;
            margin-bottom: 2rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
            position: relative;
        }

        .countdown-container {
            display: flex;
            justify-content: space-between;
            gap: 1rem;
            margin-top: 1.5rem;
            position: relative;
            z-index: 1;
        }

        .countdown-item {
            text-align: center;
            flex: 1;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 1rem;
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .countdown-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .countdown-value {
            font-size: 2.8rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
            text-shadow: 2px 2px 4px rgba(6, 207, 107, 0.322);
            background: linear-gradient(45deg, #fff, #f0f0f0);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-family: 'Playfair Display', serif;
        }

        .countdown-label {
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 2px;
            opacity: 0.9;
            font-weight: 500;
        }

        .ganesh-puja-info {
            margin-bottom: 2rem;
        }
        
        .ganesh-puja-info p {
            font-size: 1.1rem;
            line-height: 1.6;
            color: #0a0a0a;
            margin-bottom: 1.5rem;
        }

        .celebration-highlights {
            display: flex;
            justify-content: space-between;
            gap: 1rem;
            margin-top: 2rem;
        }

        .highlight-item {
            text-align: center;
            flex: 1;
            padding: 1rem;
            background: rgba(78, 115, 223, 0.1);
            border-radius: 10px;
            transition: transform 0.3s ease;
        }

        .highlight-item:hover {
            transform: translateY(-5px);
        }
        
        .highlight-item i {
            font-size: 1.5rem;
            color: #994edf;
            margin-bottom: 0.5rem;
        }
        
        .highlight-item span {
            display: block;
            font-size: 0.9rem;
            color: #000000;
        }

        /* Dark mode styles */
        body.dark-mode .ganesh-puja-section {
            background: linear-gradient(135deg, #2e466efb 0%, #1b0247 100%);
        }

        body.dark-mode .ganesh-puja-content {
            background: rgba(205, 209, 214, 0.514);
            color: #fff;
        }

        body.dark-mode .ganesh-puja-info p {
            color: #e2e8f0;
        }

        body.dark-mode .highlight-item {
            background: rgba(61, 3, 95, 0.767);
        }

        body.dark-mode .highlight-item span {
            color: #e2e8f0;
        }
        
        body.dark-mode .countdown-wrapper {
            background: linear-gradient(145deg, #1f5dc7, #051025);
        }
        
        body.dark-mode .countdown-item {
            background: rgba(14, 34, 126, 0.918);
            border-color: rgba(56, 44, 44, 0.1);
        }

        /* Mobile Responsive Styles */
        @media (max-width: 768px) {
            .countdown-container {
                gap: 0.5rem;
            }

            .countdown-item {
                padding: 0.8rem 0.5rem;
            }

            .countdown-value {
                font-size: 2rem;
            }

            .countdown-wrapper h3 {
                font-size: 1.5rem;
            }
        }
        
        @media (max-width: 576px) {
            .countdown-value {
                font-size: 1.8rem;
            }

            .countdown-label {
                font-size: 0.8rem;
            }
        }

        /* Puja Details Styles */
        .puja-details-section {
            margin-top: 2rem;
        }

        .puja-details {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            padding: 2rem;
            margin-top: 1rem;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }

        .detail-item {
            display: flex;
            align-items: center;
            margin-bottom: 1.5rem;
            padding: 1rem;
            background: rgba(78, 115, 223, 0.1);
            border-radius: 10px;
            transition: transform 0.3s ease;
        }

        .detail-item:hover {
            transform: translateX(10px);
        }

        .detail-item i {
            font-size: 1.5rem;
            color: #4e73df;
            margin-right: 1rem;
            width: 40px;
            text-align: center;
        }

        .detail-item h5 {
            margin: 0;
            color: #2d3748;
            font-size: 1.1rem;
        }

        .detail-item p {
            margin: 0;
            color: #718096;
            font-size: 0.9rem;
        }

        /* Dark mode styles */
        body.dark-mode .puja-details {
            background: rgba(45, 55, 72, 0.9);
        }

        body.dark-mode .detail-item {
            background: rgba(78, 115, 223, 0.2);
        }

        body.dark-mode .detail-item h5 {
            color: #fff;
        }

        body.dark-mode .detail-item p {
            color: #e2e8f0;
        }
    </style>

    <script>
        // Add this to your existing JavaScript
        document.addEventListener('DOMContentLoaded', function() {
            const moreDetailsBtn = document.getElementById('moreDetailsBtn');
            const pujaDetails = document.querySelector('.puja-details');

            moreDetailsBtn.addEventListener('click', function() {
                const isHidden = pujaDetails.style.display === 'none';
                pujaDetails.style.display = isHidden ? 'block' : 'none';
                this.innerHTML = isHidden ? 
                    '<i class="fas fa-minus-circle me-2"></i>Hide Details' : 
                    '<i class="fas fa-info-circle me-2"></i>More Details';
            });
        });
    </script>

